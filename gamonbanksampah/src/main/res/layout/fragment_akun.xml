<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/med_white"
    tools:context=".Akun.AkunFragment">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="@android:color/white"
        android:background="?attr/colorPrimary">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:text="@string/profile"
            android:textColor="@android:color/white"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_gravity="center"
            />

    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.CardView
        app:cardElevation="6dp"
        android:layout_below="@+id/toolbar"
        android:id="@+id/cv_profile"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginStart="20dp"
                android:id="@+id/tv_nama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="1.3sp"
                android:text="@string/nama"
                android:textColor="#7b7b7b"
                android:textSize="15sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tv_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="1.3sp"
                android:textColor="@color/tree_green"
                android:textSize="15sp"
                android:textStyle="normal"
                android:text="EDIT" />

            <TextView
                android:id="@+id/tv_nama_lengkap"
                android:layout_below="@+id/tv_nama"
                android:layout_marginStart="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:textColor="@color/colorPrimaryDark"
                android:lineSpacingExtra="2sp"
                android:text="Sumber Jaya"
                />

            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginStart="20dp"
                android:id="@+id/tv_email"
                android:layout_below="@+id/tv_nama_lengkap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="1.3sp"
                android:text="@string/email"
                android:textColor="#7b7b7b"
                android:textSize="15sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tv_email_user"
                android:layout_below="@+id/tv_email"
                android:layout_marginStart="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:textColor="@color/colorPrimaryDark"
                android:lineSpacingExtra="2sp"
                android:text="sj.banksampah@gmail.com"
                />
            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginStart="20dp"
                android:id="@+id/tv_nohp"
                android:layout_below="@+id/tv_email_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:lineSpacingExtra="1.3sp"
                android:text="@string/telepon"
                android:textColor="#7b7b7b"
                android:textSize="15sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tv_nohp_user"
                android:layout_below="@+id/tv_nohp"
                android:layout_marginStart="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:textColor="@color/colorPrimaryDark"
                android:lineSpacingExtra="2sp"
                android:text="081234567898"
                />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_marginTop="20dp"
        app:cardElevation="6dp"
        android:layout_below="@+id/cv_profile"
        android:id="@+id/cv_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_https_32dp"
                android:padding="10dp"/>
            <TextView
                android:id="@+id/tv_password"
                android:layout_toEndOf="@+id/iv_password"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:textColor="@color/colorPrimaryDark"
                android:lineSpacingExtra="2sp"
                android:text="@string/ganti_sandi"
                />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        app:cardElevation="6dp"
        android:layout_marginTop="1dp"
        android:id="@+id/cv_lokasi"
        android:layout_below="@+id/cv_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_lokasi"
                android:padding="10dp"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_pin_drop_24dp"/>
            <TextView
                android:id="@+id/tv_lokasi"
                android:layout_toRightOf="@+id/iv_lokasi"
                android:padding="10dp"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:textColor="@color/colorPrimaryDark"
                android:lineSpacingExtra="2sp"
                android:text="@string/ganti_lokasi"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        app:cardElevation="6dp"
        android:layout_marginTop="20dp"
        android:id="@+id/cv_logout"
        android:layout_below="@+id/cv_lokasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_input_black_24dp"
                android:padding="10dp"/>
            <TextView
                android:id="@+id/tv_logout"
                android:layout_toEndOf="@+id/iv_logout"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:textColor="@color/colorPrimaryDark"
                android:lineSpacingExtra="2sp"
                android:text="@string/keluar"
                />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>