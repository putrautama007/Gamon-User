<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        app:cardElevation="6dp"
        android:id="@+id/cv_voucher_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/search_border_white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/image_voucher_user"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/iw"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/judul_voucher_user"
                android:layout_below="@+id/image_voucher_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/colorPrimaryDark"
                android:lineSpacingExtra="2.7sp"
                android:text="Voucher Infinity War"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>