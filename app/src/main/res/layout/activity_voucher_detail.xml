<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.voucher.VoucherDetailActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="@android:color/white"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:background="?attr/colorPrimary">

        <ImageView
            android:id="@+id/back_voucher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back_24dp"/>

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:text="Voucher"
            android:textColor="@android:color/white"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_gravity="center"
            />

    </android.support.v7.widget.Toolbar>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar">
        <android.support.v7.widget.CardView
            android:elevation="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/voucher_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/iw" />

                <TextView
                    android:id="@+id/judul_voucher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/voucher_image"
                    android:layout_marginStart="20dp"
                    android:fontFamily="sans-serif"
                    android:lineSpacingExtra="2sp"
                    android:text="Voucher Infinity War"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/poin_voucher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp"
                    android:layout_below="@+id/voucher_image"
                    android:fontFamily="sans-serif"
                    android:gravity="center_horizontal"
                    android:lineSpacingExtra="2.7sp"
                    android:text="150.000P"
                    android:textColor="@color/tree_green"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/deskripsi_voucer"
                    android:layout_below="@id/judul_voucher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:textSize="14sp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:fontFamily="sans-serif"
                    android:textStyle="normal"
                    android:textColor="@color/colorPrimaryDark"
                    android:lineSpacingExtra="2sp"
                    android:text="Gratis 1 tiket film Infinity War berlaku setiap hari Senin - Jumat !"
                    />

                <TextView
                    android:id="@+id/no1"
                    android:layout_below="@id/deskripsi_voucer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:textSize="14sp"
                    android:layout_marginStart="20dp"
                    android:fontFamily="sans-serif"
                    android:textStyle="normal"
                    android:textColor="@color/colorPrimaryDark"
                    android:lineSpacingExtra="1.3sp"
                    android:text="1."
                    />
                <TextView
                    android:id="@+id/syarat1"
                    android:layout_below="@id/deskripsi_voucer"
                    android:layout_toRightOf="@id/no1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:textSize="14sp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="20dp"
                    android:fontFamily="sans-serif"
                    android:textStyle="normal"
                    android:textColor="@color/colorPrimaryDark"
                    android:lineSpacingExtra="1.3sp"
                    tools:text="Voucher yang telah dibeli hanya berlaku hingga 30 hari"
                    />
                <TextView
                    android:id="@+id/no2"
                    android:layout_below="@id/syarat1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="14sp"
                    android:layout_marginStart="20dp"
                    android:fontFamily="sans-serif"
                    android:textStyle="normal"
                    android:textColor="@color/colorPrimaryDark"
                    android:lineSpacingExtra="1.3sp"
                    android:text="2."
                    />
                <TextView
                    android:id="@+id/syarat2"
                    android:layout_below="@id/syarat1"
                    android:layout_toRightOf="@id/no2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="14sp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="20dp"
                    android:fontFamily="sans-serif"
                    android:textStyle="normal"
                    android:textColor="@color/colorPrimaryDark"
                    android:lineSpacingExtra="1.3sp"
                    tools:text="Voucher hanya berlaku di seluruh Bioskop Kota Malang"
                    />

                <TextView
                    android:id="@+id/no3"
                    android:layout_below="@id/syarat2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="14sp"
                    android:layout_marginStart="20dp"
                    android:fontFamily="sans-serif"
                    android:textStyle="normal"
                    android:textColor="@color/colorPrimaryDark"
                    android:lineSpacingExtra="1.3sp"
                    android:text="3."
                    />
                <TextView
                    android:id="@+id/syarat3"
                    android:layout_below="@id/syarat2"
                    android:layout_toRightOf="@id/no3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="14sp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="20dp"
                    android:fontFamily="sans-serif"
                    android:textStyle="normal"
                    android:textColor="@color/colorPrimaryDark"
                    android:lineSpacingExtra="1.3sp"
                    tools:text="Tombol ‘Gunakan Voucher’ hanya digunakan untuk petugas"
                    />

                <TextView
                    android:id="@+id/no4"
                    android:layout_below="@id/syarat3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="14sp"
                    android:layout_marginStart="20dp"
                    android:fontFamily="sans-serif"
                    android:textStyle="normal"
                    android:textColor="@color/colorPrimaryDark"
                    android:lineSpacingExtra="1.3sp"
                    android:text="4."
                    />
                <TextView
                    android:id="@+id/syarat4"
                    android:layout_below="@id/syarat3"
                    android:layout_toRightOf="@id/no4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="14sp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="20dp"
                    android:fontFamily="sans-serif"
                    android:textStyle="normal"
                    android:textColor="@color/colorPrimaryDark"
                    android:lineSpacingExtra="1.3sp"
                    tools:text="Tukar voucher pada petugas bioskop"
                    />


                <TextView
                    android:id="@+id/no5"
                    android:layout_below="@id/syarat4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="14sp"
                    android:layout_marginStart="20dp"
                    android:fontFamily="sans-serif"
                    android:textStyle="normal"
                    android:textColor="@color/colorPrimaryDark"
                    android:lineSpacingExtra="1.3sp"
                    android:text="5."
                    />
                <TextView
                    android:id="@+id/syarat5"
                    android:layout_below="@id/syarat4"
                    android:layout_toRightOf="@id/no5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="14sp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="20dp"
                    android:fontFamily="sans-serif"
                    android:textStyle="normal"
                    android:textColor="@color/colorPrimaryDark"
                    android:lineSpacingExtra="1.3sp"
                    tools:text="Transaksi selesai !"
                    />

                <Button
                    android:id="@+id/btn_buy_voucher"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="70dp"
                    android:layout_marginEnd="70dp"
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_with_border"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/syarat5"
                    android:fontFamily="sans-serif"
                    android:textStyle="normal"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:text="@string/beli_voucher" />
            </RelativeLayout>


        </android.support.v7.widget.CardView>

    </ScrollView>


</RelativeLayout>